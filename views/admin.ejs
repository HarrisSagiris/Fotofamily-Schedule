<!DOCTYPE html>
<html lang="en">
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            margin: 0;
            padding: 0;
            background-color: #f4f6f9;
        }
        .sidebar {
            width: 200px;
            background-color: #343a40;
            color: #fff;
            padding: 20px;
            height: 100vh;
            position: fixed;
        }
        .sidebar ul {
            list-style-type: none;
            padding: 0;
        }
        .sidebar ul li {
            margin: 20px 0;
        }
        .sidebar ul li a {
            color: #fff;
            text-decoration: none;
            font-size: 16px;
        }
        .content {
            margin-left: 220px;
            padding: 20px;
            flex-grow: 1;
        }
        h2 {
            color: #333;
            font-weight: bold;
        }
        form {
            margin-top: 20px;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        label, input, select, button {
            display: block;
            margin: 8px 0;
        }
        button {
            padding: 10px;
            color: #fff;
            background-color: #007bff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/handsontable@latest/dist/handsontable.min.css">
</head>
<body>
    <div class="sidebar">
        <ul>
            <li><a href="#party-panel">Party Panel</a></li>
            <li><a href="#add-photographer">Add Photographer</a></li>
            <li><a href="#settings">Settings</a></li>
        </ul>
    </div>
    <div class="content">
        <section id="party-panel">
            <h2>Party Panel</h2>
            <div id="event-table"></div>
            <form action="/admin/add-event" method="POST">
                <label>Date:</label>
                <input type="text" name="date" required>
                <label>Details:</label>
                <input type="text" name="details" required>
                <label>Assign to Photographer:</label>
                <select name="assignedTo">
                    <% photographers.forEach(photographer => { %>
                        <option value="<%= photographer._id %>"><%= photographer.email %></option>
                    <% }) %>
                </select>
                <button type="submit">Add Event</button>
            </form>
        </section>

        <section id="add-photographer">
            <h2>Add Photographer</h2>
            <form action="/admin/add-photographer" method="POST">
                <label>Email:</label>
                <input type="email" name="email" required>
                <label>Password:</label>
                <input type="password" name="password" required>
                <button type="submit">Add Photographer</button>
            </form>
        </section>

        <section id="settings">
            <h2>Settings</h2>
            <!-- Add settings options here -->
        </section>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/handsontable@latest/dist/handsontable.min.js"></script>
    <script>
        const eventTable = document.getElementById('event-table');
        const hot = new Handsontable(eventTable, {
            data: <%- JSON.stringify(events) %>,
            colHeaders: ['Date', 'Details', 'Assigned Photographer'],
            columns: [
                { data: 'date' },
                { data: 'details' },
                { data: 'assignedTo.email' }
            ],
            rowHeaders: true,
            filters: true,
            dropdownMenu: true
        });
    </script>
</body>
</html>
