<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/handsontable@8.4.0/dist/handsontable.full.min.css">
    <script src="https://cdn.jsdelivr.net/npm/handsontable@8.4.0/dist/handsontable.full.min.js"></script>
</head>
<body>
    <div class="sidebar">
        <h2>Admin Dashboard</h2>
        <ul>
            <li><a href="#events">Event Management</a></li>
            <li><a href="#addPhotographer">Add Photographer</a></li>
            <li><a href="#settings">Settings</a></li>
        </ul>
    </div>

    <div class="content">
        <!-- Event Management Section with Handsontable -->
        <section id="events">
            <h3>Event Management</h3>
            <div id="hot"></div>
            <button id="saveEvents">Save Changes</button>
        </section>

        <!-- Add Photographer Section -->
        <section id="addPhotographer">
            <h3>Add Photographer</h3>
            <form action="/admin/addPhotographer" method="POST">
                <input type="email" name="email" placeholder="Photographer Email" required>
                <input type="password" name="password" placeholder="Password" required>
                <button type="submit">Add Photographer</button>
            </form>
        </section>

        <!-- Settings Section -->
        <section id="settings">
            <h3>Settings</h3>
            <p>Theme settings, contact options, etc.</p>
        </section>
    </div>

    <script>
        // Fetch photographers and events data from the server
        const photographers = <%- JSON.stringify(photographers) %>;
        const events = <%- JSON.stringify(events) %>;

        const photographerNames = photographers.map(p => p.email);

        // Initialize Handsontable with event data
        const container = document.getElementById('hot');
        const hot = new Handsontable(container, {
            data: events.map(event => [event.name, event.date, event.details, event.assignedPhotographer?.email || ""]),
            colHeaders: ['Event Name', 'Date', 'Details', 'Assigned Photographer'],
            columns: [
                { data: 0, type: 'text' },
                { data: 1, type: 'date', dateFormat: 'YYYY-MM-DD' },
                { data: 2, type: 'text' },
                { data: 3, type: 'dropdown', source: photographerNames }
            ],
            rowHeaders: true,
            minSpareRows: 1,
            licenseKey: 'non-commercial-and-evaluation'
        });

        // Save button functionality to send updated event data to the server
        document.getElementById('saveEvents').addEventListener('click', async () => {
            const eventData = hot.getData()
                .filter(row => row[0] !== null && row[0] !== "");  // Exclude empty rows

            // Map event data to objects to send to the backend
            const formattedData = eventData.map(row => ({
                name: row[0],
                date: row[1],
                details: row[2],
                photographerEmail: row[3] || null
            }));

            try {
                const response = await fetch('/admin/saveEvents', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ events: formattedData })
                });
                const result = await response.json();
                if (result.success) {
                    alert("Events saved successfully!");
                } else {
                    alert("Error saving events. Please try again.");
                }
            } catch (error) {
                console.error("Error:", error);
                alert("Error saving events. Please try again.");
            }
        });
    </script>
</body>
</html>
